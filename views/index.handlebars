<div class="container m-auto row justify-content-center ">
  <div class="mt-5 col-md-6 text-center">

    <h1 class="align-middle">URL Shortener</h1>

    <i class="fas fa-link fa-4x mb-4 mt-4 "></i>

    {{#if message}}
    <div class="row justify-content-center alert alert-danger" role="alert">
      {{{message}}}
    </div>
    {{/if}}
    <div class="justify-content-center">
      <form action="/show" method="POST">
        <input type="text" name="url" placeholder="Enter origin url" class="form-control">
        <button type="submit" class="mt-4 btn btn-outline-primary">Create stort URL</button>
      </form>
    </div>

  </div>

</div>